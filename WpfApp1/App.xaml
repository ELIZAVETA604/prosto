<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="400">
    <Grid>
        <TextBox Name="UsernameTextBox" PlaceholderText="Имя пользователя" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <PasswordBox Name="PasswordBox" PlaceholderText="Пароль" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <Button Content="Войти" Click="LoginButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <TextBlock Name="ErrorMessage" Text="" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>